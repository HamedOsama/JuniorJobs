---
import DropColor from "@components/UI/dropColor.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import Suggest from "@components/React/Form/suggest"
import CustomTransition from "@layouts/CustomTransition.astro";
---
<CustomTransition slot="transition"/>
<BaseLayout title="zJunior - Report Issue" description="Report issue that you have faced using zJunior" url="/issue">  
    <div class="flex relative mx-20 justify-center h-screen gap-[15rem] items-center">
        <section class="w-[20rem]">
            <div>
                <h1 class="font-bold text-3xl my-2">Add Suggestion</h1>
                <p>We value your insights and ideas for making Zjunior platform even better. Your suggestions can help us enhance the user experience, add new features, and improve the overall functionality of our platform.</p>
            </div>
            
        </section>
        <section >
            <div class="mx-auto flex min-h-screen w-[38rem] items-center justify-center">
                <div class="h-[32rem] flex w-full mx-auto rounded-2xl  bg-gradient-to-bl from-accent/50 via-primary/60 to-accent/50 p-[2px]">
                    <div class="flex flex-col h-full w-[38rem] rounded-2xl items-center gap-[2.625rem] bg-background py-10">
                        <Suggest client:load/>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <DropColor/>
    

</BaseLayout>