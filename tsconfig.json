{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "allowJs": true,
    "types": [
      "vite/client"
    ],
    "importsNotUsedAsValues": "error",
    "allowImportingTsExtensions" : true,
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@util/*":[
        "src/util/*"
      ],
      "@api/*":[
        "src/pages/api/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
  }
}